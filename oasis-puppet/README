# Add your own puppet modules dependencies in Puppetfile
# Available modules : http://forge.puppetlabs.com/ and git repo

# Get/update Puppetfile modules (in "modules" directory which is gitignored)
> librarian-puppet install

# Create your project-specific puppet modules in the "modules/project" directory

# Add other puppet node

# manifests/dev.pp
node 'myserver.atolcd.priv' {
  class { '::system_tools::server::dev' :
    admin_mail  => '<user>@atolcd.com'
  }
  # ...
}

# manifests/demo.pp
node 'myserver.hosting.atolcd.priv' {
  class { '::system_tools::server::demo' :
    admin_mail  => '<user>@atolcd.com'
  }
  # ...
}

# Configure your vagrant box
> edit vagrant/Vagrantfile
# port forwarding
# folder sharing
# CPU and RAM

# Use your vagrant box inside the "vagrant" directory
> vagrant up            # start the box (create it if necessary)
> vagrant provision     # apply puppet provisioning
> vagrant halt          # stop the box
> vagrant ssh           # connect to box with ssh
> vagrant destroy       # destroy the box

# Package all your puppet config to deploy it on remote server
> mvn package

# Apply your puppet config in a server
> puppet apply --modulepath /path/to/modules/project:/path/to/modules/deps /path/to/manifests/XXXX.pp

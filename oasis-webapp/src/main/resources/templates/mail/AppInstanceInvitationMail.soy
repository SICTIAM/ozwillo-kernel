{namespace oasis.mail autoescape="strict"}

/**
 * New app-instance invitation email subject.
 */
{template .newAppInstanceInvitationSubject kind="text"}
{@param requesterName:    string} /** Requester name. */
{@param appInstanceName: string}  /** App-instance name. */

{msg desc="App-instance invitation email subject"}
{$requesterName} has invited you to use the {$appInstanceName} application
{/msg}
{/template}

/**
 * New app-instance invitation email body.
 */
{template .newAppInstanceInvitationBody}
{@param requesterName:            string} /** Requester name. */
{@param appInstanceName:          string} /** App-instance name. */
{@param appInstanceInvitationUrl: string} /** Link to the app-instance invitation page. */

<!DOCTYPE html>
<html>
<body>
{msg desc="App-instance invitation email body"}
  <p>{$requesterName} has invited you to use the {$appInstanceName} application.
  <p>To accept or reject the invitation, follow this link: <a href="{$appInstanceInvitationUrl}">{$appInstanceInvitationUrl}</a>.
  <p>If you were not expecting this invitation, you can ignore this email.
  <p>The Ozwillo team
{/msg}
</body>
</html>
{/template}

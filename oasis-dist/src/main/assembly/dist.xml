<assembly>
  <id>gertrude-dist</id>
  <formats>
    <format>zip</format>
    <format>dir</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <baseDirectory>${project.name}-${project.version}</baseDirectory>


  <fileSets>
    <fileSet>
      <directory>${project.basedir}/src/linux/</directory>
      <outputDirectory>/linux/</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${project.basedir}/src/deb/etc/</directory>
      <outputDirectory>/linux/deb/etc/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>

  <dependencySets>
    <dependencySet>
      <outputDirectory>/lib</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
    </dependencySet>
  </dependencySets>
</assembly>
